@model WebApplication15.Models.Part

@{
    ViewBag.Title = "ایجاد";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <input name="ID" value="@ViewBag.id" hidden />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" hidden>
        @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @Value = ViewBag.id } })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> نام بخش مربوطه </label>

        <div class="col-md-10">
            @Html.DropDownList("SectionID", null, htmlAttributes: new { @class = "form-control", disabled = "disabled" })

            @Html.ValidationMessageFor(model => model.SectionID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> نام قسمت جدید </label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="افزودن" class="btn btn-default" onmousemove="this.classList.add('btn-success')" onmouseout="this.classList.remove('btn-success')" />
            </div>
        </div>
    </div>
}

