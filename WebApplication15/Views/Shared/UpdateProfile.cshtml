@model WebApplication15.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @*  This file has been downloaded from bootdey.com @bootdey on twitter*@
    @*All snippets are MIT license http://bootdey.com/license*@
    <title>account setting or edit profile - Bootdey.com</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>



        input[class="form-control"] {
            padding: 13px 10px;
            margin: 8px 0;
            box-sizing: border-box;
            height: 20px;
            font-size: 10px;
        }
        textarea[class="form-control"] {
            font-size: 10px;
            max-block-size:100px;
            min-block-size:30px;
        }

        .title_text {
            padding-bottom: 10px;
            font-size: 13px;
        }

        .address {
            padding-right: 20px;
        }

        ::placeholder {
            color: gray;
            opacity: .7 !important;
        }
        p {
            font-size:15px ;
        }
    </style>

</head>
<body>

    <form method="post" id="Form" action="" enctype="multipart/form-data">

        <div class="container">
            <div class="row gutters">
                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="account-settings">
                                <div class="user-profile">
                                    <div class="user-avatar">
                                        <input name="ImageName" hidden value="@ViewBag.Model.ImageName" />
                                        <input name="Roles" hidden value="@ViewBag.Model.Roles" />
                                        @if (ViewBag.Model.ImageName != null)
                                        {
                                            <img src="~/UserImages/@ViewBag.Model.ImageName" class="thumbnail" style="display:inline-block" />

                                        }
                                        else
                                        {
                                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Maxwell Admin">

                                        }
                                        <input type="file" class="custom-file-input" name="imgUp">
                                        
                                    </div>

                                    <h6 class="user-email">نقش شما در سیستم</h6>
                                    @if (User.IsInRole("visitor"))
                                    {
                                        <h6 class="user-name">مشاهده گر </h6>
                                    }
                                    @if (User.IsInRole("analyzer"))
                                    {
                                        <h6 class="user-name">تحلیل گر </h6>
                                    }
                                    @if (User.IsInRole("editor"))
                                    {
                                        <h6 class="user-name">ویرایش گر </h6>
                                    }
                                    @if (User.IsInRole("manager"))
                                    {
                                        <h6 class="user-name">مدیر سایت </h6>
                                    }

                                </div>
                                <div class="about">
                                    <h5>درباره</h5>
                                    @if (User.IsInRole("visitor"))
                                    {
                                        <p>امکان ویرایش اطلاعات سیستم از شما سلب شده و فقط امکان مشاهده داده را دارا میباشید</p>

                                    }
                                    @if (User.IsInRole("analyzer"))
                                    {
                                        <p>شما میتواند جهت تحلیل و برسی ، از داده های مربوط به روز های مختلف  خروجی نمودار بگیرد</p>
                                    }
                                    @if (User.IsInRole("editor"))
                                    {
                                        <p>ویرایشگر امکان حذف و اضافه کردن بخش ها و قسمت های مختلف توربین را دارد</p>
                                    }
                                    @if (User.IsInRole("manager"))
                                    {
                                        <p>مدیر سایت امکان حذف، اضافه و ویرایش کاربران را دارد</p>
                                        <p>مدیر سایت به تمامی صفحات دسترسی دارد</p>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                    <div class="card h-100" >
                        <div class="card-body" style="text-align:right">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary title_text">مشخصات</h6>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Name">نام</label>
                                        <input type="text" class="form-control" name="Name" value="@ViewBag.Model.Name" id="Name" placeholder="نام و نام خانوادگی">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Family">نام خانوادگی</label>
                                        <input type="text" class="form-control" name="Family" value="@ViewBag.Model.Family" id="Family" placeholder="نام و نام خانوادگی">
                                    </div>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Email">ایمیل</label>
                                        <input type="email" class="form-control" name="Email" value="@ViewBag.Model.Email" id="Email" placeholder="ایمیل خود را وارد نمایید">
                                    </div>
                                </div>


                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Phone">شماره تماس</label>
                                        <input type="tel" class="form-control" name="Phone" value="@ViewBag.Model.Phone" id="Phone" placeholder="شماره تماس">
                                    </div>
                                </div>

                            </div>


                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary title_text">امنیت</h6>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="UserName">نام کاربری</label>
                                        <input type="text" class="form-control" value="@ViewBag.Model.UserName" name="UserName" id="UserName" placeholder="نام کاربری" readonly>
                                    </div>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Street">روز عبور</label>
                                        <input type="text" class="form-control" value="@ViewBag.Model.Password" name="Password" id="Password" placeholder="خالی نگذارید" required>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        <label for="Street">تکرار رمز عبور</label>
                                        <input type="text" class="form-control" value="@ViewBag.Model.Password" id="ConfirmPassword" placeholder="کپی نکنید" required>
                                        <p id="ErrorText" class="text-danger" style="font-size:10px"> </p>

                                    </div>
                                </div>
                                @{
                                    var visitor = User.IsInRole("visitor");
                                    var analyzer = User.IsInRole("analyzer");
                                    var editor = User.IsInRole("editor");
                                    var manager = User.IsInRole("manager");
                                }
                                @if (!manager)
                                {
                                    <br />
                                    <div class="row gutters title_text address col-xl-12 col-lg-12 col-md-12  col-sm-12 col-12" style="">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mt-3 mb-2 text-primary title_text">نشانی</h6>
                                        </div>


                                        <div class="col-xl-6 col-lg-6 col-md-6  col-sm-6 col-12">
                                            <div class="form-group">
                                                <label for="City">شهر</label>
                                                <input type="text" class="form-control" value="@ViewBag.Model.City" name="City" id="City" placeholder="شهر محل سکونت">
                                            </div>
                                        </div>

                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="form-group">
                                                <label for="Street">نشانی</label>
                                                @* <input type="text" class="form-control" id="Street" placeholder="نشانی خود را وارد نمایید">*@

                                            <textarea    rows="2" id="Street" name="Address" class="form-control" placeholder="آدرس محل سکونت را به صورت دقیق وارد نمایید">@ViewBag.Model.Address</textarea>
                                            </div>
                                        </div>
                                    </div>
                                }



                                @*<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="website">سایت شخصی</label>
                                            <input type="url" class="form-control" id="website" placeholder="آدرس وب سایت">
                                        </div>
                                    </div>*@



                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="text-right">
                                        <a href="/Home/HomePage" class="btn btn-default">لغو</a>
                                        <button type="submit" id="submit" name="submit" class="btn btn-success" onclick="CheckValidation(event)">به روز رسانی</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <style type="text/css">


        body {
            background-image: url('../../Content/42.jpg');
            /*background-image: url('../../Content/40.jpg');*/
            /*background-image: url('../../Content/43.jpg');*/
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
            padding-top: 40px;
            color: #2e323c;
            position: relative;
            height: 100%;
        }

        .account-settings .user-profile {
            margin: 0 0 1rem 0;
            padding-bottom: 1rem;
            text-align: center;
        }

            .account-settings .user-profile .user-avatar {
                margin: 0 0 1rem 0;
            }

                .account-settings .user-profile .user-avatar img {
                    width: 110px;
                    height: 110px;
                    -webkit-border-radius: 100px;
                    -moz-border-radius: 100px;
                    border-radius: 100px;
                }

            .account-settings .user-profile h5.user-name {
                margin: 0 0 0.5rem 0;
            }

            .account-settings .user-profile h6.user-email {
                margin: 5px;
                font-size: 10px;
                font-weight: 400;
                color: gray;
                padding-top:30px;
            }

        .account-settings .about {
            margin: 2rem 0 0 0;
            text-align: center;
        }

            .account-settings .about h5 {
                margin: 0 0 15px 0;
                color: #007ae1;
            }

            .account-settings .about p {
                font-size: 11px;
                line-height:25px
            }

        .form-control {
            border: 1px solid #cfd1d8;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
            font-size: .825rem;
            background: #ffffff;
            color: #2e323c;
        }

        .card {
            background:rgb(255, 255, 255, 0.4);
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 50px;
            border: 0;
            margin-bottom: 1rem;
            padding: 20px;
        }

        /*css for input tag by type="file"*/
        /*start*/
        .custom-file-input {
            color: transparent;
            opacity: 1 !important;
            margin-right: 30%;
            margin-top:5px;
            
        }


            .custom-file-input::-webkit-file-upload-button {
                visibility: hidden;
            }

            
                .custom-file-input::before {
                content: 'تغییر نمایه';
                color: black;
                display: inline-block;
                background: -webkit-linear-gradient(top, #f9f9f9, #e3e3e3);
                border: 1px solid #999;
                border-radius: 3px;
                padding: 5px 8px;
                outline: none;
                white-space: nowrap;
                -webkit-user-select: none;
                cursor: pointer;
                text-shadow: 1px 1px #fff;
                font-weight: 700;
                font-size: 10pt;
            }

            .custom-file-input:hover::before {
                border-color: black;
                
                
            }

           

                .custom-file-input:active::before {
                    background: -webkit-linear-gradient(top, #e3e3e3, #f9f9f9);
                }

        body {
            padding: 20px;
        }

             

                 

       
        /*End*/

    </style>


    <script type="text/javascript"></script>
</body>


</html>
<script>
    @{
           bool IsManager = Request.IsAuthenticated && User.IsInRole("manager") ? true : false;
        }
    var ismanager =  @IsManager.ToString().ToLower();
    console.log(ismanager);
    function CheckValidation(event) {
        //console.log(@User.Identity.IsAuthenticated.ToString().ToLower());


        if (ismanager) {
            document.getElementById("Form").action = "http://localhost:9973/Managment/UpdateProfile";
            $("Form").submit();
            return
        }
        else {

            document.getElementById("Form").action = "http://localhost:9973/Values/UpdateProfile";
            document.getElementById("Form").submit;
        }


        if ($("#Password").val() != $("#ConfirmPassword").val()) {
            event.preventDefault();
            document.getElementById("ErrorText").innerHTML = "تکرار رمز عبور صحیح نمیباشد";
        }




    }

    $("#Password").focus(function ()
    {
        $("#ErrorText").html("");
    })
    $("#ConfirmPassword").focus(function () {
        $("#ErrorText").html("");
    })


</script>

