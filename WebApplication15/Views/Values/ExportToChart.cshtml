                                    <div style="overflow:hidden; width: 90%; height: 90%; background-color: white; border-radius: 20px;position:relative; top:-30px;right:10px">
                                        <img src="~/Content/chART/img/18.PNG" style="width:100%;height:100%" id="AreaChart" class="esmothly" />
                                    </div>
                                    <p style="text-align:center;position:relative;bottom:15px">
                                        نمودار مساحت
                                    </p>
                                </div>

                            </div>

                        </div>

                        <!-- Donut Chart -->
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary" style="text-align:center">شاخصه های آماری </h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-pie pt-8">
                                        <table style="width:100%;">
                                            <tr>
                                            <thead>
                                            <th>شاخصه</th>

                                            @if (ViewBag.Date2 != null)
                                            {
                                                <th>مقدار</th>


                                            }

                                            
                                            @*اگر دکمه ی مقایسه ای انتخاب شده*@
                                            @*assign in Comparation2Days Action*@
                                            else if (ViewBag.LDate != null)
                                            {
                                                <th>@ViewBag.FDate</th>
                                                <th>@ViewBag.LDate</th>

                                            }
                                            else
                                            {
                                                <th>مقدار</th>
                                            }
                                            </thead>
                                            </tr>
                                            <tr>
                                            <tbody>
                                            <td>میانگین</td>
                                            <td><div class="statistics_Value">@ViewBag.avg</div></td>
                                            @if (ViewBag.DataPoints2 != null && ViewBag.DataPoints2 != "[]")
                                            {
                                                <td><div class="statistics_Value">@ViewBag.avg2</div></td>
                                            }
                                            </tr>
                                            <tr>
                                                <td>میانه</td>
                                                <td><div class="statistics_Value">@ViewBag.median</div></td>
                                                @if (ViewBag.DataPoints2 != null && ViewBag.DataPoints2 != "[]")
                                                {
                                                    <td><div class="statistics_Value">@ViewBag.median2</div></td>
                                                }
                                            </tr>
                                            <tr>
                                                <td>مد</td>
                                                <td><div class="statistics_Value">@ViewBag.mod</div></td>
                                                @if (ViewBag.DataPoints2 != null && ViewBag.DataPoints2 != "[]")
                                                {
                                                    <td><div class="statistics_Value">@ViewBag.mod2</div></td>

                                                }
                                            </tr>
                                            <tr>
                                                <td>واریانس</td>
                                                <td><div class="statistics_Value">@ViewBag.varianc</td>
                                                @if (ViewBag.DataPoints2 != null && ViewBag.DataPoints2 != "[]")
                                                {
                                                    <td><div class="statistics_Value">@ViewBag.varianc2</td>
                                                }
                                            </tr>
                                            <tr>
                                                <td>انحراف معیار</td>
                                                <td><div class="statistics_Value">@ViewBag.enheraf</td>
                                                @if (ViewBag.DataPoints2 != null && ViewBag.DataPoints2 != "[]")
                                                {
                                                    <td><div class="statistics_Value">@ViewBag.enheraf2</td>
                                                }
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <hr>
                                    <p>
                                        شاخصه های اماری مربوط به روز


                                        @if (ViewBag.Date2 != null)
                                        {
                                            <span style="color:lightseagreen">@ViewBag.Date1</span>
                                            <span>تا روز</span>

                                            <span style="color:lightseagreen">@ViewBag.Date2</span>
                                        }


                                        @*اگر دکمه ی مقایسه ای انتخاب شده*@
                                        @*assign in Comparation2Days Action*@
                                        else if (ViewBag.LDate != null)
                                        {
                                            <span style="color:lightseagreen">@ViewBag.FDate</span>
                                            <span>و</span>
                                            <span style="color:lightseagreen">@ViewBag.LDate</span>

                                        }
                                        else
                                        {
                                            <span style="color:lightseagreen">@ViewBag.Date</span>
                                        }
                                        <span>میباشد.</span>
                                    </p>


                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->


        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
