                                <div style="width:20%;height:120px;background-color:rgb(61, 192, 178, 0.20);border-radius:20px;float:left;margin:0px 20px;">
                                    <div style="overflow:hidden; width: 90%; height: 90%; background-color: black; border-radius: 20px;position:relative; top:-30px;right:10px">
                                        <img src="~/Content/chART/img/6.PNG" style="width:100%;height:100%;" id="LinearChart" class="esmothly" />

                                    </div>
                                    <p style="text-align:center;position:relative;bottom:15px">
                                        نمودار خطی
                                    </p>

                                </div>


                                @if (ViewBag.DataPoints2 == null || ViewBag.DataPoints2 == "[]")
