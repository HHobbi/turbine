                                        @*assign in IntervalDate Action*@
                                        @if (ViewBag.Date2 != null)
                                        {
                                            <span style="color:red">از</span>
                                            @ViewBag.Date1;
                                            <span style="color:red">تا</span>
                                            @ViewBag.Date2;
                                        }
                                        @*اگر دکمه ی مقایسه ای انتخاب شده*@
                                        @*assign in Comparation2Days Action*@
                                        else if (ViewBag.LDate != null || ViewBag.FDate != null)
                                        {
                                            if (ViewBag.DataPoints1 == "[]")
                                            {
                                                <span style="color:gray">@ViewBag.FDate</span>
                                            }
                                            else
                                            {
                                                @ViewBag.FDate;
                                            }
                                            <span style="color:red">و</span>

                                            if (ViewBag.DataPoints2 == "[]")
                                            {
                                                <span style="color:gray">@ViewBag.LDate</span>
                                            }
                                            else
                                            {
                                                @ViewBag.LDate;
                                            }
                                        }
                                        @*حالت دیفالت و حالت نمودارگیری بازه ای*@
                                        @*assign in SingleDate Action*@
                                        else
                                        {
                                            @ViewBag.Date;
                                        }




                                    </h6>


                                </div>

