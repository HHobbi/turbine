                                    <div style="width:20%;height:120px;background-color:rgb(61, 192, 178, 0.20);border-radius:20px;float:left;margin:0px 20px;">
                                        <div style="overflow:hidden; width: 90%; height: 90%; background-color: white; border-radius: 20px;position:relative; top:-30px;right:10px">
                                            <img src="~/Content/chART/img/15.PNG" style="width:100%;height:100%;" id="CircularChart" class="esmothly" />
                                        </div>
                                        <p style="text-align:center;position:relative;bottom:15px">
                                            نمودار دایره
                                        </p>
                                    </div>
                                }
                                else
                                {
                                    <div style="width:20%;height:120px;background-color:rgb(61, 192, 178, 0.20);border-radius:20px;float:left;margin:0px 20px;">
                                        <div style="overflow:hidden; width: 90%; height: 90%; background-color: white; border-radius: 20px;position:relative; top:-30px;right:10px">
                                            @*<img src="~/Content/chART/img/15.PNG"  />*@
                                            <img src="~/Content/chART/img/scatter1.jpg" style="width:105%;height:105%;" id="ScatterChart" class="esmothly" />
                                        </div>
                                        <p style="text-align:center;position:relative;bottom:15px">
                                            نمودار پراکندگی
                                        </p>
                                    </div>
                                }

                                <div style="width:20%;height:120px;background-color:rgb(61, 192, 178, 0.20);border-radius:20px;float:left;margin:0px 20px;">
                                    <div style="overflow:hidden; width: 90%; height: 90%; background-color: orange; border-radius: 20px;position:relative; top:-30px;right:10px">
                                        <img src="~/Content/chART/img/2.PNG" style="width:100%;height:100%;" id="ColumnChart" class="esmothly" />
                                    </div>
                                    <p style="text-align:center;position:relative;bottom:15px">
                                        نمودار ستونی
                                    </p>
                                </div>



